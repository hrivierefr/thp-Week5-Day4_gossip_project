<%= form_for :comment, method: 'create', url: @gossip.id.to_s+'/comments' do |f| %>
  <%= f.text_area :content, placeholder: 'Votre commentaire ici' %><br />
  <%= f.text_field :id, type: 'hidden', value: @gossip.id  %> <br />
  <%= f.submit 'Publier votre commentaire' , class: 'form-group text-center btn btn-info'%>
<% end %>