<div>
  	<h4>
  		Voici les derniers gossips postés sur le réseau :
  	</h4>


	<div id="carouselExampleControls" class="carousel slide offset-1 col-10 mb-2" data-ride="carousel" data-interval="10">
		<% @last_gossips.each_with_index do |g, i|%>
	  		<div class="carousel-inner">
	  			<% if i == 0 %>
	    			<div class="carousel-item active">
    			<% else %>
	    			<div class="carousel-item">
				<% end %>
					<div class="card text-center d-block w-100">
	  					<div class="card-header">Rumeur n°<%= g.id %></div>
						<div class="card-body">
				    		<p class="card-text"> <%= g.content %> </p>
			  			</div>
		  			    <div class="card-footer blockquote-footer text-muted">
					        Postée il y 2 jours<% if g.author_id != 0 %>, par <%= g.author.name %><% end %>
				        </div>
					</div>
				</div>
			</div>
		<% end %>
	</div>


	<div class= "text-center mb-5">
		<%= link_to 'Parcourir toutes les rumeurs', gossips_path, class:"btn btn-primary" %>
	</div>
	
	<h4>Toi aussi, gossip au calme</h4>
	<div class= 'offset-3 col-6'>
		<%= render 'gossips/create-form' %>
	</div>

	<%= link_to "Enregistre-toi !", root_path, class: "btn btn-info" %>

</div>

