<%= form_for :user, url: signup_path do |f| %>
  <%= f.text_field :email, placeholder: 'Email', :required => 'required', class:"form-control" %><br />
  <%= f.text_field :name, placeholder: "Nom d'utilisateur", :required => 'required', class:"form-control" %><br />
  <%= f.password_field :password, placeholder: 'Mot de passe', :required => 'required', class:"form-control" %><br />  
  <%= f.password_field :password_confirmation, placeholder: 'Confirmation', :required => 'required', class:"form-control" %><br />
  <%= f.submit 'Valider mon inscription', class: 'form-group m-auto btn btn-info'%>
<% end %>
